.swiper-tab {
  width: 100%;
  text-align: center;
  line-height: 80rpx;
  background-color: #ffdd1e;
}

.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block;
  width: 50%;
  color: #333;
  font-weight: bold;
  border-bottom: 0rpx;
}

.on {
  color: #333;
  border-bottom: 2rpx solid #fff;
}

.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

.swiper-box view {
  text-align: center;
}

.content-home {
  width: 98%;
  padding: 0 1%;
  overflow: hidden;
  font-size: 12px;
  font-family: "\5FAE\8F6F\96C5\9ED1";
}

.container-home {
  width: 100%;
  overflow: hidden;
  font-size: 12px;
  background-color: #f1f1f1;
  font-family: "\5FAE\8F6F\96C5\9ED1";
}

.hot-view {
  background-color: #f1f1f1;
  display: flex;
  height: 60rpx;
  flex-direction: row;
  justify-content: flex-start;
}

.hot-img {
  width: 50rpx;
  height: 50rpx;
  margin-top: 5rpx;
}

.hot-text {
  color: #333;
  font-size: 12px;
  height: 50rpx;
  margin-top: 6rpx;
  line-height: 50rpx;
}

.img-list {
  width: 100%;
  overflow: hidden;
}

.img-list .ul {
  margin-left: -2%;
}

.img-list .li {
  width: 49%;
  height: 240rpx;
  overflow: hidden;
  position: relative;
  float: left;
  margin-left: 1%;
  margin-top: 9rpx;
}

.img-list .li navigator {
  width: 100%;
  height: 100%;
}

.item-img {
  width: 100%;
  min-height: 100%;
}

.img-list .li text {
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 2;
  width: 96%;
  padding: 0 2%;
  height: 35px;
  line-height: 35px;
  color: #fff;
}

.is-vip {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 0;
  right: 0;
  z-index: 2;
  padding: 1% 2%;
}

.img-list .li .bg {
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 1;
  width: 100%;
  height: 35px;
  background-color: #000;
  opacity: 0.5;
}

.send_btn {
  z-index: 3;
  width: 100rpx;
  height: 100rpx;
  margin-top: 1.6vw;
  display: flex;
  flex-direction: row;
  position: fixed;
  bottom: 2%;
  left:80%;
}
